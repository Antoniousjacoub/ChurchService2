<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The ActionBar displayed at the top -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <EditText
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="الاسم الاول "
                android:inputType="textPersonName"
                android:textColorHint="@color/cure_green"
                android:textColor="@color/dark_blue"
                android:theme="@style/TextLabel"
                android:textAlignment="viewStart"
                android:layout_gravity="start"/>




            <EditText
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:hint="الايميل"

                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/cure_green"
                android:textColor="@color/dark_blue"
                android:theme="@style/TextLabel" />
            <EditText
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/edt_password"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:hint="الرقم السري"
android:gravity="end"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/cure_green"
                android:textColor="@color/dark_blue"
                android:theme="@style/TextLabel" />
            <EditText
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/edt_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:hint="اعد كتابة الرقم السرى"

                android:gravity="end"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/cure_green"
                android:textColor="@color/dark_blue"
                android:theme="@style/TextLabel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_marginStart="12dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RadioButton
                        android:id="@+id/rd_male"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:buttonTint="@color/dark_blue"
                        android:gravity="start|center_vertical"
                        android:text="ذكر"

                        android:textColor="@color/cure_green" />

                    <RadioButton
                        android:id="@+id/rd_female"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:buttonTint="@color/dark_blue"
                        android:gravity="start|center_vertical"
                        android:text="انثي"
                        android:textColor="@color/cure_green" />
                </RadioGroup>
            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"

                android:layout_marginStart="32dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btn_colored_background"
                android:text="تسجيل"
                android:textColor="@color/white"
                app:layout_constraintVertical_bias="0.516" />





        </LinearLayout>

</LinearLayout>

