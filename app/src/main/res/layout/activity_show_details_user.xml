<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <!-- The ActionBar displayed at the top -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/attach_image" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img_profile"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"


                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="الاسم الاول:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel" />

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="الاسم الثاني:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />

                <EditText
                    android:id="@+id/et_middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"

                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="رقم التليفون:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
android:gravity="end"

                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"

                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                   />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:paddingBottom="10dp"
                    android:layout_margin="10dp"
                    android:background="@color/cure_green"

                   />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="الايميل:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"

                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint=" ملاحظات:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel" />

                <EditText
                    android:id="@+id/et_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="النوع:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />

                <EditText
                    android:id="@+id/et_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:enabled="false"
                    android:hint="تاريخ الميلاد:"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />

                <EditText
                    android:id="@+id/txt_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/cure_green"
                    android:theme="@style/TextLabel"  />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

